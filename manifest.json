{
    "manifest_version": 2,
    "name": "Spanish Vocab Tool",
    "description": "Translates selected text from Spanish to English and saves it for later.",
    "version": "0.2",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage",
        "unlimitedStorage"
    ]
}